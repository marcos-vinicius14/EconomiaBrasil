@page "/"
@inherits HomePage;

<MudContainer MaxWidth="MaxWidth.Small">
    <MudText
        Typo="Typo.h1"
        Align="Align.Center">
        Taxa Selic Brasil
    </MudText>
</MudContainer>

<MudContainer MaxWidth="MaxWidth.Medium" Class="pa-2">
    <MudCard>
        <MudCardContent>
            <MudText Class="pa-4" Typo="Typo.h6">Veja de forma rápida a taxa SELIC do Brasil e as motivações para sua decisão.</MudText>
                <MudText Typo="Typo.body2" Class="pa-2">
                    A taxa SELIC é a taxa de juros básica da economia, que influencia outras taxas de juros, como empréstimos e financiamentos.
                </MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary">Saiba Mais</MudButton>
        </MudCardActions>
    </MudCard>
</MudContainer>


<MudContainer MaxWidth="MaxWidth.Medium" Class="pa-2">
    <MudCard Class="d-flex flex-column">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6" Align="Align.Center">@Comunicado.Titulo</MudText>
                <MudText Typo="Typo.h6" Align="Align.Center" Class="pa-2">Data de referênca: @Comunicado.DataReferencia</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.subtitle1">
                @Comunicado.TextoComunicado
            </MudText>
        </MudCardContent>
    </MudCard>
</MudContainer>